<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="create_type_wh_form_view" model="ir.ui.view">
            <field name="name">create_type_wh_form_view</field>
            <field name="model">create.type.wh</field>
            <field name="arch" type="xml">
                <form string="Create type">
                    <sheet>
                        <group>
                            <div class="oe_title">
                                <label for="type_base_id"/>
                                <h1>
                                    <field name="type_base_id" options="{'no_create': True, 'no_edit': True}" placeholder="Types Withholding" required="1"/>
                                </h1>
                            </div>
                            <div class="oe_title" attrs="{'invisible': [('type_base_id', '=', False)]}">
                                <label for="company_to_ids"/>
                                <h1>
                                    <field name="company_to_ids" domain="[('id', '!=', company_id)]" widget="many2many_tags" options="{'no_create': True, 'no_edit': True}" placeholder="Companies" required="1"/>
                                </h1>
                            </div>
                            <field name="company_id" invisible="1"/>
                        </group>
                        <footer>
                            <button string="Create Types"
                                class="btn-primary"
                                type="object"
                                name="create_val"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="create_type_wh_act_window" model="ir.actions.act_window">
            <field name="name">Create type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">create.type.wh</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="move_withholding_form_view" model="ir.ui.view">
            <field name="name">withholding.move.form</field>
            <field name="model">account.move.withholding</field>
            <field name="arch" type="xml">
                <form string="Withholdings">
                    <sheet>
                        <group>
                            <group>
                                <field name="type" invisible="1"/>
                                <field name="company_id" invisible="1"/>
                                <field name="move_id" invisible="1" />
                                <field name="wh_processed" invisible="1"/>
                                <field name="name" readonly="1" force_save="1"/>
                                <field name="move_type" invisible="1"/>
                                <field name="type_withholding_purchase_id"
                                       string="move_type Withholding Purchase"
                                       attrs="{'invisible':[('move_type', '=', 'out_invoice')],
                                              'required':[('move_type', '=', 'in_invoice')],
                                              'readonly':[('wh_processed', '=', True)]}"
                                       domain="[('is_sale', '=', False)]" options="{'no_create': True}"/>
                                <field name="type_withholding_sale_id"
                                       string="Type Withholding Sale"
                                       attrs="{'invisible':[('move_type', '=', 'in_invoice')],
                                       'required':[('move_type', '=', 'out_invoice')],
                                       'readonly':[('wh_processed', '=', True)]}"
                                       domain="[('is_sale', '=', True)]"
                                       options="{'no_create': True}"/>
                            </group>
                        </group>
                        <group string="Calculation">
                            <group>
                                <field name="tax_withholding_id" required="1" options="{'no_create': True}"
                                attrs="{'readonly':[('wh_processed', '=', True)]}" force_save="1"/>
                                <field name="base_amount_tax" required="1"
                                attrs="{'readonly':[('wh_processed', '=', True)]}" force_save="1"/>
                                <field name="date_trx" required="1"
                                attrs="{'readonly':[('wh_processed', '=', True)]}" force_save="1"/>
                            </group>
                            <group>
                                <field name="percent_tax" readonly="1" force_save="1"
                                attrs="{'readonly':[('wh_processed', '=', True)]}"/>
                                <field name="tax_total" force_save="1"
                                attrs="{'readonly':[('wh_processed', '=', True)]}"/>
                                <field name="date_post" required="1" force_save="1"
                                attrs="{'readonly':[('wh_processed', '=', True)]}"/>
                            </group>
                            <group>
                                <field name="rules_id" readonly="1" force_save="1"
                                attrs="{'readonly':[('wh_processed', '=', True)]}"/>
                                <field name="description" force_save="1"
                                attrs="{'readonly':[('wh_processed', '=', True)]}"/>
                                 <field name="document_no" force_save="1"
                                attrs="{'readonly':[('wh_processed', '=', True)]}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="move_withholding_tree_view" model="ir.ui.view">
            <field name="name">withholding.move.tree</field>
            <field name="model">account.move.withholding</field>
            <field name="arch" type="xml">
                <tree string="Withholdings">
                    <field name="type" invisible="1"/>
                    <field name="company_id" invisible="1"/>
                    <field name="move_id" invisible="1"/>
                    <field name="date_trx" readonly="1"/>
                    <field name="type_withholding_purchase_id"
                           string="Type Withholding Purchase"
                           attrs="{'invisible':[('type', '=', 'out_invoice')], 'required':[('type', '=', 'in_invoice')]}"
                           domain="[('is_sale', '=', False)]" options="{'no_create': True}"/>
                    <field name="type_withholding_sale_id"
                           string="Type Withholding Sale"
                           attrs="{'invisible':[('type', '=', 'in_invoice')], 'required':[('type', '=', 'out_invoice')]}"
                           domain="[('is_sale', '=', True)]"
                           options="{'no_create': True}"/>
                    <field name="tax_withholding_id" required="1" options="{'no_create': True}"/>
                    <field name="base_amount_tax" required="1"/>
                    <field name="percent_tax" readonly="1"/>
                    <field name="tax_total"/>
                    <field name="rules_id" readonly="1"/>
                    <field name="document_no"/>
                </tree>
            </field>
        </record>

        <record id="withholdings_action_id" model="ir.actions.act_window">
            <field name="binding_type">action</field>
            <field name="context">{'search_default_move_id': active_id,'default_move_id': active_id}</field>
            <field name="domain">[('move_id', '=', active_id)]</field>
            <field name="name">Withholdings</field>
            <field name="res_model">account.move.withholding</field>
            <field name="target">current</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
        </record>



        <record id="account_move_form_inherit" model="ir.ui.view">
            <field name="name">account_move.inherit.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//form[1]/header[1]/button[@name='action_post'][2]" position="replace">
                    <button name="action_post"
                       string="Confirm"
                       class="oe_highlight"
                       type="object"
                       groups="account.group_account_invoice"
                       attrs="{'invisible': ['|', '|', '|', ('state', '!=', 'draft'), ('auto_post', '=', True), ('move_type', '=', 'entry'), ('draft', '=', True),]}"
                    />
                </xpath>
                <xpath expr="//button[@name='button_cancel']" position="after">
                    <button name="generate_withholdings"
                            type="object"
                            attrs="{'invisible':['|', ('state','in', ('posted', 'cancel')), ('move_type','in',['out_invoice', 'out_refund', 'in_refund', 'out_receipt', 'in_receipt', 'entry'])]}"
                            string="Generate Withholdings Purchase"
                            class="oe_highlight"/>
                </xpath>
                <xpath expr="//button[@name='button_cancel']" position="after">
                    <button name="generate_withholdings"
                            type="object"
                            attrs="{'invisible':['|', '|', ('state','!=', 'posted'), ('move_type','in',['in_invoice', 'out_refund', 'in_refund','out_receipt', 'in_receipt',  'entry']), ('withholding_generate','=',True)]}"
                            string="Generate Withholdings Sale"
                            class="oe_highlight"/>
                    <button name="cancel_wh_sale"
                            type="object"
                            attrs="{'invisible':['|', '|', ('state','!=', 'posted'), ('move_type','in',['in_invoice', 'out_refund', 'in_refund','out_receipt', 'in_receipt',  'entry']), ('withholding_generate','=',False)]}"
                            string="Cancel Withholdings Sale"
                            class="oe_highlight"/>
                </xpath>
                <xpath expr="//button[@name='button_cancel']" position="after">
                    <button name="generate_payment"
                            type="object"
                            attrs="{'invisible':['|', '|', '|', ('state','!=', 'posted'), ('move_type','in',['out_refund', 'in_invoice', 'in_refund','out_receipt', 'in_receipt', 'entry']), ('withholding_generate','=',False), ('withholding_processed','=', True)]}"
                            string="Generate Payment Withholdings"
                            class="oe_highlight"/>
                </xpath>
                <xpath expr="//field[@name='payment_reference']" position="after">
                     <field name="withholding_processed" invisible="1"/>
                     <field name="withholding_generate" invisible="1"/>
                     <field name="draft" invisible="1"/>
                     <field name="move_wh_id" readonly="1" attrs="{'invisible':[('move_wh_id','=', False),]}"/>
                     <field name="withholding_number" attrs="{'invisible':[('withholding_number','=', False),]}"/>
                 </xpath>
                <xpath expr="//form[1]/sheet[1]/div[@name='button_box']" position="inside">
                    <button class="oe_stat_button" icon="fa-rocket" type="action" name="%(withholdings_action_id)d" attrs="{'invisible':[('move_type','in',['out_refund', 'in_refund', 'out_receipt', 'entry',   'out_receipt'])]}">
                        <field name="count_withholding" string="Withholdings" widget="statinfo"/>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
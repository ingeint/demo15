<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="tax_account_form_inherit" model="ir.ui.view">
            <field name="name">tax_account.form</field>
            <field name="model">account.tax</field>
            <field name="inherit_id" ref="account.view_tax_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='active']" position="after">
                    <field name="is_withholding"/>
                </xpath>
            </field>
        </record>

         <record id="tax_account_tree_inherit" model="ir.ui.view">
            <field name="name">tax_account.tree</field>
            <field name="model">account.tax</field>
            <field name="inherit_id" ref="account.view_tax_tree"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='active']" position="after">
                    <field name="is_withholding" widget="boolean_toggle"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
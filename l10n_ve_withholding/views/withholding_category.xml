<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="withoulding_form_view" model="ir.ui.view">
            <field name="name">withoulding.form</field>
            <field name="model">withholding.category</field>
            <field name="arch" type="xml">
                <form string="Withholding Category">
                    <sheet>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="name"/>
                                <field name="description"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="withoulding_tree_view" model="ir.ui.view">
            <field name="name">withoulding.tree</field>
            <field name="model">withholding.category</field>
            <field name="arch" type="xml">
                <tree string="Withholding Category">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>


        <record id="withoulding_act_window" model="ir.actions.act_window">
            <field name="name">Withholding Category</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">withholding.category</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create your retention category here.
                </p>
            </field>
        </record>
    </data>
</odoo>
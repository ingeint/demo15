<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="withholding_sequence_form_view" model="ir.ui.view">
            <field name="name">withholding.sequence.form</field>
            <field name="model">withholding.sequence</field>
            <field name="arch" type="xml">
                <form string="Withholding Sequence">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Title" required="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="company_id" required="1"/>
                            </group>
                            <group>
                                <field name="ir_sequence" required="1"/>
                                <field name="withholding_id" required="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="withholding_sequence_tree_view" model="ir.ui.view">
            <field name="name">withholding.sequence.tree</field>
            <field name="model">withholding.sequence</field>
            <field name="arch" type="xml">
                <tree string="Withholding Sequence">
                    <field name="name"/>
                    <field name="company_id"/>
                    <field name="ir_sequence"/>
                </tree>
            </field>
        </record>


        <record id="withholding_sequence_act_window" model="ir.actions.act_window">
            <field name="name">Withholding Sequence</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">withholding.sequence</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Add a new Sequence for withholding
                </p>
            </field>
        </record>

    </data>
</odoo>
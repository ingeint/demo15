<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="ingeint_account_payment_form_inherit" model="ir.ui.view">
            <field name="name">ineint.account.paymente.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_id']" position="after">
                    <field name="generate_igtf"/>
                    <field name="payment_reference_id" attrs="{'invisible': [('payment_reference_id','=',False)]}"/>
                </xpath>
                <xpath expr="//field[@name='date']" position="before">
                    <field name="amount_igtf"  attrs="{'invisible': [('generate_igtf','=',False)]}"/>
                </xpath>
            </field>
        </record>

        <record id="ingeint_payment_register_form_inherit" model="ir.ui.view">
            <field name="name">ineint.paymente.register.form</field>
            <field name="model">account.payment.register</field>
            <field name="inherit_id" ref="account.view_account_payment_register_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_bank_id']" position="after">
                    <field name="generate_igtf"/>
                </xpath>
                <xpath expr="//field[@name='payment_date']" position="before">
                    <field name="amount_igtf"  attrs="{'invisible': [('generate_igtf','=',False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
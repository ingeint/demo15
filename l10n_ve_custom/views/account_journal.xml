<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="ing_l10n_ve_account_journal_inherit_form" model="ir.ui.view">
            <field name="name">account_journal_inherit_form</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type']" position="after">
                    <field name="have_cn_sequence"/>
                    <field name="sequence_no_control_id"  attrs="{'invisible': [('have_cn_sequence','=',False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
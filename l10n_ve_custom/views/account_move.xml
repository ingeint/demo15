<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="ing_l10n_ve_account_move_inherit_form" model="ir.ui.view">
            <field name="name">account_move_inherit_form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_reference']" position="after">
                    <field name="invoice_no" attrs="{'invisible': [('move_type','=','out_invoice')]}"/>
                    <field name="control_number" attrs="{'readonly': [('move_type','=','out_invoice')]}" force_save="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>